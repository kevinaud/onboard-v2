root = true

[*.cs]
# CSharpier will read and respect the following properties.
# Set the desired maximum line length. CSharpier uses this as its "printWidth".
max_line_length = 120

# Configure indentation style and size.
indent_style = space
indent_size = 2

# Configure end-of-line characters. Use 'lf' for consistency across platforms.
end_of_line = lf

# Standard .NET formatting options respected by CSharpier.
insert_final_newline = true
trim_trailing_whitespace = true

# Additional analyzer configuration retained from prior settings.
charset = utf-8
dotnet_separate_import_directive_groups = true
dotnet_sort_system_directives_first = true

# var preferences
csharp_style_var_for_built_in_types = false:error
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Qualification & this.
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion

# Braces & newlines
csharp_new_line_before_open_brace = all
csharp_preserve_single_line_blocks = true

# Naming example
dotnet_naming_rule.private_fields_should_be_camel_case.severity = warning
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_underscore

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.camel_underscore.capitalization = camel_case
dotnet_naming_style.camel_underscore.required_prefix = _

# Disable overly strict analyzers
dotnet_diagnostic.SA0001.severity = none
dotnet_diagnostic.SA1101.severity = none
dotnet_diagnostic.SA1201.severity = none
dotnet_diagnostic.SA1502.severity = none
dotnet_diagnostic.SA1512.severity = none
dotnet_diagnostic.SA1516.severity = none
dotnet_diagnostic.SA1611.severity = none
dotnet_diagnostic.SA1633.severity = none
dotnet_diagnostic.SA1600.severity = none
dotnet_diagnostic.SA1602.severity = none
dotnet_diagnostic.SA1649.severity = none
dotnet_diagnostic.SA1651.severity = none
dotnet_diagnostic.SA1009.severity = none
dotnet_diagnostic.SA1111.severity = none
dotnet_diagnostic.MA0047.severity = none
dotnet_diagnostic.MA0048.severity = none
dotnet_diagnostic.MA0049.severity = none
dotnet_diagnostic.MA0051.severity = none
dotnet_diagnostic.MA0144.severity = none
dotnet_diagnostic.IDE1006.severity = suggestion
